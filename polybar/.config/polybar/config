## MODULES
[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0
label-connected = 

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0
label-connected = 
format-disconnected =

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = AC
poll-interval = 15

format-discharging = <ramp-capacity>

ramp-capacity-0 =  
ramp-capacity-1 =  
ramp-capacity-2 =  

[module/i3]
type                          = internal/i3

label-focused                 = 
label-focused-padding         = 1
label-focused-foreground      = ${colors.foreground-light}

label-unfocused                = 
label-unfocused-padding        = 1
label-unfocused-foreground     = ${colors.foreground-light}

label-urgent                  = %index%!
label-urgent-background       = ${colors.alert}
label-urgent-padding          = 1

label-empty                   = 
label-empty-padding           = 1
label-empty-foreground        = ${colors.foreground-light}

[module/date]
type                          = internal/date
interval                      = 5
date                          = "%A %d %B"
time                          = %H%M
label                         = %date%, %time%
